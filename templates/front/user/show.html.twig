{% extends 'base.html.twig' %}

{% block title %}Mon profil !{% endblock %}

{% block body %}
<h1 class="mt-3">Mon Profil</h1>

{% for flashMessage in app.flashes('success') %}
    <div class="alert alert-dismissible alert-success">
        {{ flashMessage }}
         <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}   
 
<table class="table table-hover">
  <thead class="purple-text">
    <tr>
      <th scope="col">Nom de l'utilisateur</th>
      <th scope="col">Email de l'utilisateur</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr class="table-light">
      <td>{{ user.username }}</td>
      <td>{{ user.email }}</td>
      <td>
      <a href="{{ path('app_front_user_edit', {'id': app.user.id})}}" class="btn btn-sm btn-success">Modifier</a> 
     <a href="{{ path('app_front_user_delete', {'id': app.user.id})}}" class="btn btn-sm btn-danger" onclick="return confirmDelete()">Supprimer</a>
      </td> {# {{ path('app_front_user_delete', {'id': app.user.id})}} #}
    </tr>
  </tbody>
</table>

<script>
    function confirmDelete() {
        return confirm("Êtes-vous sûr de vouloir supprimer cet utilisateur ?");
    }
</script>
{% endblock %}
